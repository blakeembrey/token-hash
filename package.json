{
  "name": "token-hash",
  "version": "0.0.0",
  "description": "Generate base64url encoding from the left-most half of the hash of a token",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "prettier": "prettier --write",
    "lint": "tslint \"src/**/*.ts\" --project tsconfig.json",
    "format": "npm run prettier -- \"src/**/*.ts\"",
    "build": "rimraf dist && tsc",
    "specs": "jest --coverage",
    "test": "npm run -s lint && npm run -s build && npm run -s specs",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/blakeembrey/token-hash.git"
  },
  "keywords": [
    "at_hash",
    "c_hash",
    "hash",
    "access",
    "token",
    "openid"
  ],
  "author": {
    "name": "Blake Embrey",
    "email": "hello@blakeembrey.com",
    "url": "http://blakeembrey.me"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/blakeembrey/token-hash/issues"
  },
  "homepage": "https://github.com/blakeembrey/token-hash",
  "jest": {
    "roots": [
      "<rootDir>/src/"
    ],
    "transform": {
      "\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "npm run prettier",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/jest": "^23.3.8",
    "@types/node": "^10.12.0",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "rimraf": "^2.5.4",
    "ts-jest": "^23.10.4",
    "tslint": "^5.0.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.0",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "universal-base64url": "^1.0.0"
  }
}
